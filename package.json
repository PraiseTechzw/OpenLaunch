{
  "name": "openlaunch",
  "version": "1.0.0",
  "description": "OpenLaunch - Collaborative Software Development Platform",
  "private": true,
  "workspaces": [
    "website",
    "frontend",
    "backend",
    "ai"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=website",
    "build": "npm run build --workspace=website",
    "start": "npm run start --workspace=website",
    "lint": "npm run lint --workspace=website",
    "type-check": "npm run type-check --workspace=website",
    "test": "echo \"Running tests for all workspaces...\" && npm run test --workspaces --if-present",
    "install-all": "npm install --workspaces",
    "clean": "rm -rf node_modules && rm -rf */node_modules && rm -rf */.next && rm -rf */dist",
    "release": "npm run release:patch",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags",
    "release:manual": "node scripts/release.js"
  },
  "keywords": [
    "open-source",
    "collaboration",
    "software-development",
    "community",
    "nextjs",
    "react",
    "typescript"
  ],
  "author": "OpenLaunch Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/PraiseTechzw/OpenLaunch.git"
  },
  "bugs": {
    "url": "https://github.com/PraiseTechzw/OpenLaunch/issues"
  },
  "homepage": "https://github.com/PraiseTechzw/OpenLaunch#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "next": "14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3"
  }
}